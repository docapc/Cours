<UserControl x:Class="WinApp.UserControls.AnimalDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinApp.UserControls"
             xmlns:converters="clr-namespace:WinApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name ="animal">
    <UserControl.Resources>
        <converters:FeedConverter x:Key="FeedConverter"/>
    </UserControl.Resources>
    <Grid DataContext="{Binding ., ElementName=animal}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Id = " />
            <TextBox Text="{Binding CurrentAnimal.Id, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Nom = " />
            <TextBox Text="{Binding CurrentAnimal.Name, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
         </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding CurrentAnimal.IsFeeded, Converter={StaticResource FeedConverter}, Mode=OneWayToSource}"/>           
        </StackPanel>
    </Grid>
</UserControl>
